{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "overrides": {
    "env": {
      "jest": true,
      "node": true
    },
    "files": ["**/*.test.js", "jest.config.js", "src/state-mock.js"],
    "rules": {
      "no-global-assign": ["error", { "exceptions": ["require"] }]
    }
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  }
}
